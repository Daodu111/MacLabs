rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Blog posts - public can read all (filtering done client-side), authenticated can write
    match /blog_posts/{postId} {
      // Allow public to read all posts (published filtering happens in the client)
      allow read: if true;
      // Allow authenticated users to write (create, update, delete)
      allow write: if request.auth != null;
    }
    
    // Allow public to query the entire blog_posts collection
    // The client code filters for published posts
    match /blog_posts/{document=**} {
      allow read: if true;
    }
    
    // Categories - public read, authenticated write
    match /blog_categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics - write for tracking, read for authenticated users
    match /blog_analytics/{analyticsId} {
      allow create: if true; // Allow anonymous analytics tracking
      allow read: if request.auth != null; // Only authenticated users can read analytics
    }
    
    // Admin users collection (optional - for role-based access)
    match /admin_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Contact form submissions - allow anonymous writes (form submissions), authenticated reads
    match /contacts/{contactId} {
      allow create: if true; // Allow anyone to submit contact form
      allow read: if request.auth != null; // Only authenticated users can read submissions
    }
  }
}
